{% extends "dashboard" %}

{% block title %}
Traitement du demande
<div class="sub header">Reference: {{ demande.reference }}</div>
{% endblock %}

{% block content %}
<div class="ui two column grid">
    <div class="row">
        <div class="column">
            <h2 class="ui header">
                Demandeur
                <div class="sub header">Information du demandeur</div>
            </h2>
            <div class="ui form">
                <table class="ui very basic collapsing celled table">
                    <tbody>
                    <tr>
                        <td>
                            <h4 class="ui image header">
                                <div class="content">
                                    Nom
                                    <div class="sub header">Human Resources</div>
                                </div>
                            </h4>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="column ">
            <h2 class="ui header">
                Demande
            </h2>
            <div class="ui cards">
                <div class="card">
                    <div class="content">
                        <img class="right floated mini ui image" src="/images/avatar/large/elliot.jpg">
                        <div class="header">
                            Elliot Fu
                        </div>
                        <div class="meta">
                            Friends of Veronika
                        </div>
                        <div class="description">
                            Elliot requested permission to view your contact details
                        </div>
                    </div>
                    <div class="extra content">
                        <div class="ui two buttons">
                            <div class="ui basic green button">Approve</div>
                            <div class="ui basic red button">Decline</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}