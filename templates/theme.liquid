                                                value="number:1959">1959

                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <div class="col-sm-12">
                                <p class="text-uppercase">à </p>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <select class="form-control"
                                            name="end_year">
                                        <option value="" selected="selected">Année</option>
                                        <option ng-value="year"
                                                ng-repeat="year in dateEndRange(Train.training_dateBegin.year)"
                                                class="ng-binding ng-scope" value="number:1959">1959
                                        </option>

                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
